{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020"],
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@docpilot/shared": ["shared/src/index.ts"],
      "@docpilot/shared/*": ["shared/src/*"],
      "@docpilot/worker/*": ["worker/src/*"]
    }
  },
  "include": []
}
