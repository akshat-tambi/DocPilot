{
  "name": "docpilot",
  "displayName": "DocPilot",
  "description": "documentation-aware copilot companion",
  "version": "0.0.0",
  "private": true,
  "publisher": "akshat",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": ["Other"],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "docpilot",
          "title": "DocPilot",
          "icon": "$(rocket)"
        }
      ]
    },
    "views": {
      "docpilot": [
        {
          "id": "docpilot.main",
          "name": "Documentation Sources",
          "type": "webview"
        }
      ]
    },
    "commands": [],
    "chatParticipants": [
      {
        "id": "docpilot.context",
        "name": "docpilot",
        "description": "Inject documentation context into regular Copilot chat",
        "isSticky": false
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "docpilot.copyContextToClipboard",
          "when": "true"
        }
      ],
      "view/title": []
    },
    "configuration": {
      "type": "object",
      "title": "DocPilot",
      "properties": {
        "docpilot.sources": {
          "type": "array",
          "default": [],
          "description": "Configured documentation sources",
          "scope": "window"
        },
        "docpilot.contextAugmentation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic context augmentation for chat conversations",
          "scope": "window"
        },
        "docpilot.contextAugmentation.maxChunks": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "Maximum number of documentation chunks to include in context",
          "scope": "window"
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "echo \"no extension tests yet\"",
  "prepackage": "pnpm --filter @docpilot/shared build && pnpm --filter docpilot-worker build && node scripts/prepare-package.cjs",
    "package": "pnpm run build && pnpm run prepackage && vsce package --out ../docpilot.vsix"
  },
  "dependencies": {
  "@docpilot/shared": "file:../shared",
    "@xenova/transformers": "^2.17.2",
    "cheerio": "^1.0.0-rc.12",
    "chromadb": "^1.8.1",
  "nanoid": "^5.0.6",
    "onnxruntime-node": "^1.18.0",
    "p-queue": "^6.6.2",
    "remark-parse": "^10.0.2",
    "remark-stringify": "^10.0.3",
    "strip-markdown": "^4.1.0",
    "undici": "^6.19.8",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.0.0"
  }
}
