{
  "name": "docpilot",
  "displayName": "DocPilot",
  "description": "documentation-aware copilot companion",
  "version": "0.0.0",
  "private": true,
  "publisher": "akshat",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": ["Other"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "docpilot.ingestUrl",
        "title": "DocPilot: Ingest Documentation URL",
        "category": "DocPilot"
      },
      {
        "command": "docpilot.cancelIngestion",
        "title": "DocPilot: Cancel Ingestion",
        "category": "DocPilot"
      },
      {
        "command": "docpilot.queryDocs",
        "title": "DocPilot: Query Documentation",
        "category": "DocPilot"
      }
    ],
    "chatParticipants": [
      {
        "id": "docpilot.assistant",
        "name": "docpilot",
        "description": "AI assistant with access to your ingested documentation",
        "isSticky": true
      }
    ]
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "echo \"no extension tests yet\""
  },
  "dependencies": {
    "@docpilot/shared": "workspace:*"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0"
  }
}
