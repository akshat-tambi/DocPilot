{
  "name": "docpilot",
  "displayName": "DocPilot",
  "description": "documentation-aware copilot companion",
  "version": "0.0.0",
  "private": true,
  "publisher": "akshat",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": ["Other"],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "docpilot.ingestUrl",
        "title": "DocPilot: Ingest Documentation URL",
        "category": "DocPilot"
      },
      {
        "command": "docpilot.cancelIngestion",
        "title": "DocPilot: Cancel Ingestion",
        "category": "DocPilot"
      },
      {
        "command": "docpilot.queryDocs",
        "title": "DocPilot: Query Documentation",
        "category": "DocPilot"
      }
    ],
    "chatParticipants": [
      {
        "id": "docpilot.assistant",
        "name": "docpilot",
        "description": "AI assistant with access to your ingested documentation",
        "isSticky": true
      }
    ]
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "echo \"no extension tests yet\"",
  "prepackage": "pnpm --filter @docpilot/shared build && pnpm --filter docpilot-worker build && node scripts/prepare-package.cjs",
    "package": "pnpm run build && pnpm run prepackage && vsce package --out ../docpilot.vsix"
  },
  "dependencies": {
  "@docpilot/shared": "file:../shared",
    "@xenova/transformers": "^2.17.2",
    "cheerio": "^1.0.0-rc.12",
    "chromadb": "^1.8.1",
  "nanoid": "^5.0.6",
    "onnxruntime-node": "^1.18.0",
    "p-queue": "^6.6.2",
    "remark-parse": "^10.0.2",
    "remark-stringify": "^10.0.3",
    "strip-markdown": "^4.1.0",
    "undici": "^6.19.8",
    "unified": "^10.1.2"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@vscode/vsce": "^3.0.0"
  }
}
